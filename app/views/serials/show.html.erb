<%- model_class = Serial -%>

<%= form_tag serials_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:query] %>
    <%= submit_tag 'Search', :name => nil, :class => 'btn' %>
  </p>
<% end %>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<table>
  <tr><td><strong><%= model_class.human_attribute_name(:title) %>:</strong></td>
  <td><%= @serial.title %></td></tr>
  <tr><td><strong><%= model_class.human_attribute_name(:volume) %>:</strong></td>
  <td><%= @serial.volume %></td></tr>
  <tr><td><strong><%= model_class.human_attribute_name(:floor) %>:</strong></td>
  <td><%= @serial.floor %></td></tr>
  <tr><td><strong><%= model_class.human_attribute_name(:row) %>:</strong></td>
  <td><%= @serial.row %></td></tr>
  <tr><td><strong><%= model_class.human_attribute_name(:section) %>:</strong></td>
  <td><%= @serial.section %></td></tr>
  <tr><td><strong><%= model_class.human_attribute_name(:notes) %>:</strong></td>
  <td><%= @serial.notes %></td></tr>
</table>

<br /><br/>
<div class="serials-show form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              serials_path, :class => 'btn'  %>
  <% if user_signed_in? %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_serial_path(@serial), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                serial_path(@serial),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  <% end %>
</div>
